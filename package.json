{
  "name": "rio",
  "version": "1.0.0",
  "description": "Backend for Rio application",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc && cp -r ./public ./dist && cp -r ./src/infrastructure/web/docs ./dist/src/infrastructure/web/docs",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate ./src/infrastructure/database/migrations/migrations -d ./src/infrastructure/database/data-source.ts",
    "migration:run": "npm run typeorm migration:run -- -d ./src/infrastructure/database/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/infrastructure/database/data-source.ts",
    "migration:show": "npm run typeorm migration:show -- -d ./src/infrastructure/database/data-source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.8.1",
    "axios": "^1.12.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.3.1",
    "joi": "^18.0.2",
    "openai": "^5.20.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "yamljs": "^0.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.13.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
